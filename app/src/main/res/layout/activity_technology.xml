<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/AppTheme_forTech"
        android:orientation="vertical"
        tools:context=".technology.TechnologyActivity">
    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:id="@+id/progress_technology"
            android:src="@drawable/techno"
            android:layout_gravity="center_horizontal"
            app:cfl_border="true"
            android:scaleType="fitCenter"
            app:cfl_border_width="8dp"
            app:cfl_wave_color="#B0C1DD"
            android:layout_marginTop="200dp"
            app:cfl_progress="70"
            app:cfl_wave_amplitude="0.06"

    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/recycler_technology"
            android:layout_height="match_parent"/>
</LinearLayout>