<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/AppTheme2"
        tools:context=".First">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textColor="#DDCBCB"
                  android:layout_weight="1"
                  android:layout_marginTop="30dp"
                android:textStyle="italic"
                  android:textSize="25dp"
                  android:text="Available News"
                  android:layout_height="wrap_content"/>
        <com.cunoraz.gifview.library.GifView
                android:layout_width="100dp"
                android:elevation="20dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                app:gif="@drawable/greet1"
                android:layout_height="130dp"/>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="20dp"
                  android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content">
  <GridLayout android:layout_width="match_parent"
              android:rowCount="4"
              android:columnCount="2"
              android:id="@+id/grid"
              android:layout_margin="5dp"
              android:layout_marginLeft="-20dp"
              android:layout_gravity="center_horizontal"
              android:alignmentMode="alignMargins"
              android:layout_height="match_parent">
      <androidx.cardview.widget.CardView
                   android:layout_width="150dp"
                   android:layout_height="170dp"
                   app:cardCornerRadius="12dp"
                   android:layout_marginLeft="3dp"
                   app:cardElevation="5dp"
                   app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/corona_id"
                           android:gravity="center">
              <ImageView android:layout_width="130dp"
                         android:layout_marginTop="5dp"
                         android:src="@drawable/covid"
                         android:layout_height="130dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Corona Virus"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="170dp"
              android:layout_marginLeft="23dp"
              app:cardCornerRadius="12dp"
              android:layout_marginTop="25dp"
              app:cardElevation="5dp"
              app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/sport_id"
                        android:gravity="center">
              <ImageView android:layout_width="130dp"
                         android:layout_marginTop="5dp"
                         android:src="@drawable/sport"
                         android:layout_height="130dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Sport"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="170dp"
              app:cardCornerRadius="12dp"
              android:layout_marginLeft="3dp"
              app:cardElevation="5dp"
              app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/technology_id"
                        android:orientation="vertical"
                        android:gravity="center">
              <ImageView android:layout_width="130dp"
                         android:layout_marginTop="5dp"
                         android:src="@drawable/techno"
                         android:layout_height="130dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Technology"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="170dp"
              app:cardCornerRadius="12dp"
              android:layout_marginLeft="23dp"
              app:cardElevation="5dp"
             android:layout_marginTop="25dp"
              app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/science_id"
                        android:orientation="vertical"
                        android:gravity="center">
              <ImageView android:layout_width="130dp"
                         android:layout_marginTop="11dp"
                         android:src="@drawable/science"
                         android:layout_height="130dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Science"
                        android:textSize="18dp"
                        android:visibility="gone"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="170dp"
              app:cardCornerRadius="12dp"
              android:layout_marginLeft="3dp"
              app:cardElevation="5dp"
              app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/entertainment_id"
                        android:orientation="vertical"
                        android:gravity="center">
              <ImageView android:layout_width="130dp"
                         android:layout_marginTop="5dp"
                         android:src="@drawable/entertain"
                         android:layout_height="130dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Entertainment"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="170dp"
              app:cardCornerRadius="12dp"
              android:layout_marginTop="23dp"
              app:cardElevation="5dp"
              android:layout_marginLeft="23dp"
              app:cardBackgroundColor="@color/colorPrimaryDark">
          <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:id="@+id/bitcoin_id"
                        android:orientation="vertical"
                        android:gravity="center">
              <ImageView android:layout_width="120dp"
                         android:src="@drawable/bit"
                         android:layout_height="100dp"/>
              <TextView android:layout_width="wrap_content"
                        android:text="Bit Coin"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>

  </GridLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>